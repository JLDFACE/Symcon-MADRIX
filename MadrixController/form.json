{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "Host",
      "caption": "Host/IP"
    },
    {
      "type": "NumberSpinner",
      "name": "Port",
      "caption": "Port",
      "minimum": 1,
      "maximum": 65535
    },
    {
      "type": "ValidationTextBox",
      "name": "Username",
      "caption": "Username (Basic Auth)"
    },
    {
      "type": "PasswordTextBox",
      "name": "Password",
      "caption": "Password (Basic Auth)"
    },
    {
      "type": "NumberSpinner",
      "name": "PollSlow",
      "caption": "PollSlow (s)",
      "minimum": 5,
      "maximum": 300
    },
    {
      "type": "NumberSpinner",
      "name": "PollFast",
      "caption": "PollFast (s)",
      "minimum": 2,
      "maximum": 30
    },
    {
      "type": "NumberSpinner",
      "name": "FastAfterChange",
      "caption": "FastAfterChange (s)",
      "minimum": 0,
      "maximum": 120
    },
    {
      "type": "NumberSpinner",
      "name": "PendingTimeout",
      "caption": "PendingTimeout (s)",
      "minimum": 2,
      "maximum": 60
    },
    {
      "type": "NumberSpinner",
      "name": "ScanChunk",
      "caption": "ScanChunk (pro Tick)",
      "minimum": 1,
      "maximum": 32
    },
    {
      "type": "SelectObject",
      "name": "DevicesParent",
      "caption": "Devices-Ordner (Objektbaum)",
      "objectType": 0
    }
  ],
  "actions": [
    {
      "type": "Label",
      "caption": "Warnung: Der Place-Scan iteriert Storages/Places per RemoteHTTP. Abhängig von Anzahl belegter Storages/Places kann das Sekunden bis Minuten dauern."
    },
    {
      "type": "Button",
      "caption": "Scan belegte Places (Cache füllen)",
      "onClick": "MADRIX_StartPlaceScan($id);"
    },
    {
      "type": "Button",
      "caption": "Namen/Labels einmalig nachziehen (ForceNameSync)",
      "onClick": "MADRIX_ForceNameSync($id);"
    }
  ]
}
